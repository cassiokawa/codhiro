<% if @reviews.blank? %>
	<span class="center"> No momento, não existe nenhuma avaliação</span>
<% end %>

<% @reviews.order("id desc").each do |r| %>
	<hr>
	<div class="row">

		<div class="col m1">
			<%= image_tag avatar_url(r.user), class: "circle responsiv-img avatar-small" %>
		</div>

		<div class="col m10">
			<div>
				<strong><%= r.user.name %></strong>
				<span class="right"><%= r.created_at %></span>
			
			</div>
			<div><%= r.star %></div>
			<div><%= r.comment %></div>
			<div>
				<%= link_to "Remove", [@project, r], method: :delete, data: {confirm: "Você tem certeza ?"} if current_user && current_user.id == r.user.id  %>
			</div>
		</div>
	</div>



<% end %>
