<div class="row">
  <div class="col m6 offset-m3  center">

<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render 'shared/devisemes' %>

	<div class="input-field">
    <%= f.email_field :email , :class=>"validate" , :placeholder=> "Email" %>
  </div>

   <button class="btn waves-effect waves-light" type="submit" name="action" > Sign Up </button>
    <%= link_to "Forgot password" , new_user_password_path, :class=> "btn waves-effect waves-light" %>
  <% end %>

	</div>
</div>