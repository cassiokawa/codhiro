<div class="row">
  <div class="col m6 offset-m3  center">

<h2>Esqueceu a sua senha</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render 'shared/devisemes' %>

	<div class="input-field">
    <%= f.email_field :email , :class=>"validate" , :placeholder=> "Email" %>
  </div>

  <button class="btn waves-effect waves-light"  type="submit" name="action"> Envie as instruções de nova senha </button>
  <% end %>

	</div>
</div>