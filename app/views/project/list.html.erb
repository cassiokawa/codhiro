<h1>Meus Projetos </h1> 

<div class="row" data-no-turbolink>
<br/>

<% if @projects.count > 0 %>
	<% @projects.each do |project| %>

	
	<div class="row" data-no-turbolink>
	</br>	  
	<% @projects.each do |project| %>        	
			<%= link_to project do %> 	

    <div class="col s12 m6 l4">
      <div class="card">
        <div class="card-image responsive-img waves-effect waves-block waves-light">
	        <%= image_tag project.image.url(:medium)%>
	      </div>        
	           
	      <div class="card-action waves-effect waves-block waves-light" , style: "height: 6em">
	      	<span class="card-title grey-text text-darken-4">
	          <%= project.shortname %>
	        </span> 
	       </div>      
	    	
	    	</div>
	    </div>
	  <% end %>
	 <% end %>
	</div>	    	


	<% end %>

<% else %>
	<div class="center">
		<h5>Você não possui nenhum projeto </h5>
		<%= link_to "Show me all Projects", root_path , class: "btn btn-primary"%>
		</div>

<% end %>

</div>
